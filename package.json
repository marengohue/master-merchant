{
  "name": "master-merchant",
  "version": "0.0.0",
  "description": "The dwarven merchant game",
  "main": "index.js",
  "scripts": {
    "start": "npm run clean && npm run build && npm run launch",
    "clean": "rm -rf dist",
    "launch": "node ./dist/index.js",
    "build:cfg": "cp -r ./src/cfg ./dist",
    "build:coffee": "node ./node_modules/coffeescript/bin/coffee --output dist/ --compile src/",
    "build": "npm run build:coffee && npm run build:cfg",
    "test": "node ./node_modules/mocha/bin/mocha --require coffeescript/register \"test/**/*.coffee\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/marengohue/master-merchant"
  },
  "author": "",
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/marengohue/master-merchant/issues"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coffeescript": "^2.3.0",
    "cson": "^5.1.0",
    "mocha": "^5.1.1"
  },
  "dependencies": {
    "colors": "^1.2.5"
  }
}
